@{
    ViewData["Title"] = "Create";
}
@model Book
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Book Create</h4>
            <form class="forms-sample" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="MainFile">Image</label>
                    <input asp-for="MainFile" class="form-control" placeholder="Image" accept="image/*">
                    <span asp-validation-for="MainFile"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">BookName</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" asp-items="@new SelectList(ViewBag.Authors,nameof(Author.Id),nameof(Author.FullName))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId">Genre</label>
                    <select asp-for ="GenreId" asp-items="@new SelectList(ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisCountPrice">DisCountPrice</label>
                    <input asp-for="DisCountPrice" class="form-control" placeholder="DisCountPrice">
                    <span asp-validation-for="DisCountPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rate">Rate</label>
                    <input asp-for="Rate" class="form-control" placeholder="Rate">
                    <span asp-validation-for="Rate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PageCount">PageCount</label>
                    <input asp-for="PageCount" class="form-control" placeholder="PageCount">
                    <span asp-validation-for="PageCount"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

