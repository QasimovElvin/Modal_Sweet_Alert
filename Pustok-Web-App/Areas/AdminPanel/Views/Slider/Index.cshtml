
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model IEnumerable<Slider>
<div class="d-flex justify-content-end mr-2 mb-3">
    <a class="btn btn-success" asp-action="Create">Create Slider</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title 1
                            </th>
                            <th>
                               Title 2
                            </th>
                            <th>
                                Description
                            </th>
                             <th>
                               Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img src="~/assets/image/@item.Image" />
                                </td>
                                <td>
                                    @item.Title1
                                </td>
                                <td>
                                    @item.Title2
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm sweet-alert">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="mdi mdi-grease-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

