
@{
    ViewData["Title"] = "Login";
}
@using Pustok_Web_App.ViewModel.Account
@model LoginVM
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Login</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
				<form action="https://demo.hasthemes.com/pustok-preview/pustok/">
					<div class="login-form">
						<h4 class="login-title">Returning Customer</h4>
						<p><span class="font-weight-bold">I am a returning customer</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="EmailOrUsername">Enter your email or username</label>
								<input asp-for="EmailOrUsername" class="mb-0 form-control" type="email" id="email1"
									   placeholder="Enter your email or username.">
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Password">Password</label>
								<input asp-for="Password" class="mb-0 form-control" type="password" id="login-password" placeholder="Enter your password">
							</div>
							<div class="col-md-12">
								<button type="submit">Login</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>

