
@{
    ViewData["Title"] = "Register";
}
@using Pustok_Web_App.ViewModel.Account
@model RegistrVM

	<section class="breadcrumb-section">
			<h2 class="sr-only">Site Breadcrumb</h2>
			<div class="container">
				<div class="breadcrumb-contents">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html">Home</a></li>
							<li class="breadcrumb-item active">Login</li>
						</ol>
					</nav>
				</div>
			</div>
		</section>
		<main class="page-section inner-page-sec-padding-bottom">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
						<!-- Login Form s-->
						<form action="#">
							<div class="login-form">
								<h4 class="login-title">New Customer</h4>
								<p><span class="font-weight-bold">I am a new customer</span></p>
								<div class="row">
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="Name">Name</label>
										<input asp-for="Name"  class="mb-0 form-control" type="text" id="name"
											placeholder="Enter Name">
									</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Surname">Surname</label>
								<input asp-for="Surname" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter Surname">
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="UserName">UserName</label>
								<input asp-for="UserName" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter UserName">
							</div>
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="Email">Email</label>
										<input asp-for="Email"  class="mb-0 form-control" type="text" id="name"
											placeholder="Enter Email Address">
									</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Password">Password</label>
								<input asp-for="Password" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter Password">
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="ConfirmPassword">ConfirmPassword</label>
								<input asp-for="ConfirmPassword" class="mb-0 form-control" type="text" id="name"
									   placeholder="Enter ConfirPassword">
							</div>
									<div class="col-md-12">
										<button type="submit" >Register</button>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>

